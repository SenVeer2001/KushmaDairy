generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String   @unique
  phone     String?
  password  String
  role      Role     @default(USER)

  @@index([role])
}



enum Role {
  ADMIN
  USER
}
